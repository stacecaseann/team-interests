    "/favoritebooks/": {
      "get": {
        "tags": [
          "FavoriteBooks"
        ],
        "description": "Get a list of all favorite books",
        "responses": {
          "200": {
            "description": "Favorite books retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "string",
                    "example": "60d21b4667d0d8992e610c85"
                  },
                  "title": {
                    "type": "string",
                    "example": "Sample Book"
                  },
                  "author": {
                    "type": "string",
                    "example": "Author Name"
                  },
                  "year": {
                    "type": "string",
                    "example": "1999"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "FavoriteBooks"
        ],
        "description": "Add a new favorite book",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Favorite book data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "The Pragmatic Programmer"
                },
                "author": {
                  "type": "string",
                  "example": "Andrew Hunt"
                },
                "year": {
                  "type": "string",
                  "example": "1999"
                }
              },
              "required": [
                "title",
                "author",
                "year"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Book created successfully"
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    },
